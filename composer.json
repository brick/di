{
    "name": "brick/di",
    "description": "Dependency injection and IoC framework",
    "type": "library",
    "keywords": [
        "Brick",
        "Di",
        "IoC",
        "Dependency Injection",
        "Inversion of Control"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "brick/reflection": "0.2.*",
        "doctrine/annotations": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "6.*",
        "satooshi/php-coveralls": "1.*"
    },
    "suggest": {
        "doctrine/annotations": "Required to control injection with annotations"
    },
    "autoload": {
        "psr-4": {
            "Brick\\Di\\": "src/",
            "Brick\\Di\\Tests\\": "tests/"
        }
    }
}